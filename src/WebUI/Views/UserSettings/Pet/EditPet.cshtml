@{
    ViewData["Title"] = "Edit Pet";
    ViewData["CurrentId"] = "myPets";
    Layout = "/Views/UserSettings/_Layout.cshtml";
}

@model WebUI.Models.Pet.CreateOrRedactPetModel
<form method="post">
    <h2>@ViewData["Title"]:</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-0">
        <input asp-for="Name" class="form-control" />
        <label asp-for="Name" class="form-label">Pet Name</label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-floating mb-0">
        <input asp-for="ShortDescription" class="form-control" />
        <label asp-for="ShortDescription" class="form-label">Short Description</label>
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>

    <div class="form-floating mb-0">
        <input asp-for="Description" class="form-control" />
        <label asp-for="Description" class="form-label">Description</label>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-floating mb-0">
        <input asp-for="Price" class="form-control" />
        <label asp-for="Price" class="form-label">Price</label>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-floating mb-0">
        <input asp-for="Weight" class="form-control" />
        <label asp-for="Weight" class="form-label">Weight</label>
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-floating mb-0">
        <input asp-for="Color" class="form-control" />
        <label asp-for="Color" class="form-label">Color</label>
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="form-floating mb-0">
        <input asp-for="Species" class="form-control" />
        <label asp-for="Species" class="form-label">Species</label>
        <span asp-validation-for="Species" class="text-danger"></span>
    </div>

    <div class="form-floating mb-0">
        <input asp-for="SubSpecies" class="form-control" />
        <label asp-for="SubSpecies" class="form-label">SubSpecies</label>
        <span asp-validation-for="SubSpecies" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id"/>
    <div>
        <button asp-controller="PetOwner" asp-action="UpdatePet" type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
    </div>
    @*ToDo: custom user options + Activity Type + CurrentPetStatus*@
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}