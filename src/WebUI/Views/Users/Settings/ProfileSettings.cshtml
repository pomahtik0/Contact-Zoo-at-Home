@model WebUI.Models.User.UserProfileDTO
@{
    ViewData["Title"] = "Profile Settings";
    Layout = "Settings/_Layout";
}

<h3>@ViewData["Title"]</h3>
@* <partial name="_StatusMessage" for="StatusMessage" /> *@
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="PhoneNumber" class="form-label"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Please enter your EmailAddress(leave empty if none)" />
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="FullName" class="form-control" placeholder="Please enter your Name." />
                <label asp-for="FullName" class="form-label"></label>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            @if (Model is WebUI.Models.User.IndividualPetOwnerUserProfileDTO)
            {
                <partial name="SubForms/_PartialIndividualPetOwnerProfileSettings" model="Model"/>
            }
            <input asp-for="ProfileImage" type="hidden" />
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
